<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
       Sign In
    </h3>
    </div>
    <div class="panel-body">
        <p> Login to access your account.</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
            <div class="form-group">
                <div class="col-md-12">
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'help-block' %><br />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
                    <hr />
                    <%= link_to "Not a member? Sign up", new_registration_path(resource_name), class: 'btn btn-default btn-block' %><br />
                    <% unless current_user %>
                    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-default btn-block' %>
                    <%= link_to "Sign in with Twitter", user_twitter_omniauth_authorize_path, class: 'btn btn-default btn-block' %>
                    <% else %>
                      <%= current_user[:name] %>
                      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
